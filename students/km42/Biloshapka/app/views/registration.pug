html
  head
    title= title
    link(rel='stylesheet', href='https://maxcdn.bootstrapcdn.com/bootstrap/4.0.0-beta.2/css/bootstrap.min.css')
  body
    nav(class="navbar navbar-expand-sm bg-dark navbar-dark")
        ul(class="navbar-nav")
            li(class="nav-item")
                a(class='nav-link', href="/users/authorize") Authorization
            li(class="nav-item")
                a(class='nav-link', href="/users/register") Registration
            li(class="nav-item")
                    a(class='nav-link', href="/flowers") Show flowers
            if admin
                li(class="nav-item")
                    a(class='nav-link', href="/flowers/create") Add flower


    div(class='container')
        div(class='row col-md-12 justify-content-center')
            h1=title
        div(class='row col-md-12 justify-content-center')
            form(action='/users/register', method="POST",class='form col-md-8')
                div(class='form-group col-md-12 row')
                    div(class='col-md-8')
                        input(type='email', name='email', required, class='form-control', placeholder='Email')
                    if errors.email
                        div(class='col-md-4')
                            small(class="text-danger")=errors.email                                        
                div(class='form-group col-md-12 row')
                    div(class='col-md-8')
                        input(type='text', name='login',required, class='form-control', placeholder='Login')
                    if errors.login
                        div(class='col-md-4')
                            small(class="text-danger")=errors.login   
                div(class='form-group col-md-12 row')
                    div(class='col-md-8')
                        input(type='password', name='password',required, class='form-control', placeholder='Password')
                    if errors.password
                        div(class='col-md-4')
                            small(class="text-danger")=errors.password   
                div(class='form-group col-md-12 row')
                    div(class='col-md-8')
                        input(type='password', name='confPass',required, class='form-control', placeholder='Confirm password')
                    if errors.confPass
                        div(class='col-md-4')
                            small(class="text-danger")=errors.confPass 
                div(class='form-group col-md-12 row')
                    div(class='col-md-8')
                        input(type='text', name='name',required, class='form-control', placeholder='Name')
                    if errors.name
                        div(class='col-md-4')
                            small(class="text-danger")=errors.name
                div(class='form-group col-md-12 row')
                    div(class='col-md-8')
                        input(type='tel', name='phone',required, class='form-control', placeholder='Phone')
                    if errors.phone
                        div(class='col-md-4')
                            small(class="text-danger")=errors.phone   
                <div class="col-sm-6 col-sm-offset-3">
                    <input type="submit" name="register-submit" style="width:150px" class="form-control btn btn-primary" value="Register">
